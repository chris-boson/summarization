    "version": "0.2.0",
    "configurations": [
        {
            "name": "Summarization Train",
            "type": "python",
            "request": "launch",
            "module": "main",
            "justMyCode": true,
            "cwd": "${workspaceFolder}/trainer",
            "env": {"PYTHONPATH": "${workspaceFolder}"},
            "args": [
                "--gpus", "0",
                "--home_dir", "~/projects/summarization",
                "--model_type", "conditional_generation",
                "--encoder", "t5-small",
                "--decoder", "None",
                "--dataset", "ackchyually",
                "--name", "debug",
                "--max_epochs", "2",
                "--train_batch_size", "8",
                "--eval_batch_size", "16",
                "--test_percentage", "0.1",
                "--max_documents", "100",
                "--max_tokens", "512",
                "--num_beams", "1",
                "--max_length", "40",
                "--repetition_penalty", "3.0"
            ]
        }
    ]
}
